<% provide(:title, "プロフィール変更・退会") %>

<div class="container-fluid">
  <h4>プロフィール変更・退会</h4>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="edit-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', size: 50 %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', size: 50 %>
      </div>

      <div class="form-group">
        <%= f.label :bio %><br />
        <%= f.text_area :bio, autofocus: true, autocomplete: "bio", class: 'form-control', size: 50 %>
      </div>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', size: 50 %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', size: 50 %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary w-100", size: 50 %>
      </div>
    <% end %>
  </div><br />

  <div class="gravatar_edit">
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">プロフィール画像の変更はこちらから(外部サイト)</a>
  </div><br />

  <div class="delete-form">
    <%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary w-100" %>
  </div><br />
</div>
