<% provide(:title, "ユーザー一覧") %>

<main role="main" class="container">
  <div class="users">
    <%= paginate @users %>
    <% @users.each do |user| %>
      <div class="list-group">
        <li class="list-group-item">
          <h3>
            <%= gravatar_for user %>
            <%= user.name %>
          </h3>
          <p class="lead">
            <%= truncate "This example is a quick exercise to illustrate how fixed to top navbar works. As you scroll, it will remain fixed to the top of your browser’s viewport." %>
            <%= link_to "もっと読む", user_path(user) %>
          </p>
        </li>
      </div>
    <% end %>
  </div>
  <%= paginate @users %>
</main>
