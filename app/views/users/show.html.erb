<% provide(:title, @user.name) %>

<div class="container-fluid">
  <h2>
    <%= gravatar_for @user %>
    <% if current_user == @user %>
      <span class="user">
        <%= link_to "#{@user.name} (投稿一覧へ)", user_posts_path(@user) %>
      </span>
    <% else %>
      <span class="user">
        <%= link_to "#{@user.name} (公開投稿一覧へ)", user_posts_path(@user) %>
      </span>
    <% end %>
  </h2>
  <p class="lead">
    <%= @user.bio %>
  </p>
  <section class="stats">
    <%= render 'shared/stats' %>
  </section>
  <%= render 'shared/follow_form' if user_signed_in? %>
  <% if @user == current_user %>
    <div><%= link_to "ユーザー情報編集へ", edit_user_registration_path %></div><br />
    <div><%= link_to "新規投稿を作成", new_post_path, class: "btn btn-lg btn-primary" %></div>
  <% end %>
</div>
